# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 120

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = double

[*.json]
indent_size = 2
trim_trailing_whitespace = false